{
  "compilerOptions": {
    "target": "es5",
    "types": [
      "jsdom",     // Include jsdom types
      "jest",      // Include jest types
      "react",     // Include React types
      "react-dom"  // Include ReactDOM types
    ],
    "lib": [
      "dom",         // For DOM-related types
      "dom.iterable", // Useful for DOM collections like NodeList
      "esnext"        // Modern JS features
    ],
    "allowJs": true,               // Allow JavaScript files to be compiled
    "skipLibCheck": true,          // Skip checking types of libraries
    "esModuleInterop": true,       // Enable default imports for commonjs modules
    "allowSyntheticDefaultImports": true, // Support default imports for modules that don't have them
    "strict": true,                // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing for file names
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch statements
    "module": "esnext",            // Use ESNext module syntax
    "moduleResolution": "node",    // Use Node.js module resolution
    "resolveJsonModule": true,     // Allow importing JSON files
    "isolatedModules": true,       // Ensures independent transpiling of files
    "noEmit": true,                // No output files from TypeScript (just for type-checking)
    "jsx": "react-jsx"             // React JSX transformation
  },
  "include": [
    "src",                           // Include all source files
    "src/Components/SetUserGoals/SetUserGoals.test.tsx", // Include specific test file
    "__tests__/**/*.tsx"              // Optionally include all .tsx files inside __tests__
, "babel.config.js", "src/setupTests.ts"  ]
}